---
// Components
import GlobalLayout from '@app/layouts/Global/index.astro';
import Subscribe from '@app/components/Subscribe/index.astro';
import Wrapper from './Wrapper';
import Footer from './Footer/index.astro';

const currentPathName: string = Astro.url.pathname;
---

<GlobalLayout>
  <Wrapper client:visible pathName={currentPathName}>
    <slot />
  </Wrapper>
  <Subscribe />
  <Footer />
</GlobalLayout>
